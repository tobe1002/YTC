	nextBtn.onclick = function() {
		console.log('Clicked next button');
		//box.style.color = "red";

	x = x + 100;
		console.log(x);
		box.style.marginLeft = x + "px";
	}
  }
	



</script>
 
 
 </head>

 <body>
   <div id="box">Box</div>
   <button id="btn">Next</button>
 </body>

